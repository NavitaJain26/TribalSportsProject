<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E3F2FD">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="District Head"
                    android:textAlignment="center"
                    android:textSize="30dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/dist_hd_prof"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="40dp"
                    android:text="Your Profile" />

                <Button
                    android:id="@+id/dist_hd_ngo"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="40dp"
                    android:text="NGO's/Others Details" />

                <Button
                    android:id="@+id/dist_hd_trib"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="40dp"
                    android:text="Tribal Details" />

                <Button
                    android:id="@+id/dist_hd_cntr"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="40dp"
                    android:text="Centre Details" />


                <Button
                    android:id="@+id/dist_hd_event"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="40dp"
                    android:text="Events" />

                <Button
                    android:id="@+id/dist_hd_rept"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="40dp"
                    android:text="Report" />


                <Button
                    android:id="@+id/dist_hd_feed"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="40dp"
                    android:text="Suggestion/Feedback" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

